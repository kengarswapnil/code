public class Bits3 {
    
        public static void main(String[] args) {
            int n=5;
            int pos=2;
            int bitmask = 1<<pos;
    
            int newno = ~(bitmask );
            int newno1 = newno & n;

    
            System.out.println(newno1);
        }
    }
    
